<svg width="128" height="128" viewBox="0 0 128 128" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="micGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4A90E2;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#5BA0F2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#357ABD;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="standGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#888888;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#555555;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="2" dy="4" stdDeviation="4" flood-color="#000000" flood-opacity="0.3"/>
    </filter>
    <filter id="innerShadow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="2"/>
      <feOffset dx="1" dy="1" result="offset"/>
    </filter>
  </defs>
  
  <!-- Microphone body -->
  <rect x="48" y="16" width="32" height="56" rx="16" ry="16" fill="url(#micGradient)" stroke="#2C5F8A" stroke-width="3" filter="url(#shadow)"/>
  
  <!-- Microphone grille -->
  <rect x="52" y="24" width="24" height="40" rx="12" ry="12" fill="none" stroke="#2C5F8A" stroke-width="2" opacity="0.4"/>
  
  <!-- Grille lines -->
  <line x1="56" y1="28" x2="72" y2="28" stroke="#2C5F8A" stroke-width="1.5" opacity="0.6"/>
  <line x1="56" y1="32" x2="72" y2="32" stroke="#2C5F8A" stroke-width="1.5" opacity="0.6"/>
  <line x1="56" y1="36" x2="72" y2="36" stroke="#2C5F8A" stroke-width="1.5" opacity="0.6"/>
  <line x1="56" y1="40" x2="72" y2="40" stroke="#2C5F8A" stroke-width="1.5" opacity="0.6"/>
  <line x1="56" y1="44" x2="72" y2="44" stroke="#2C5F8A" stroke-width="1.5" opacity="0.6"/>
  <line x1="56" y1="48" x2="72" y2="48" stroke="#2C5F8A" stroke-width="1.5" opacity="0.6"/>
  <line x1="56" y1="52" x2="72" y2="52" stroke="#2C5F8A" stroke-width="1.5" opacity="0.6"/>
  <line x1="56" y1="56" x2="72" y2="56" stroke="#2C5F8A" stroke-width="1.5" opacity="0.6"/>
  <line x1="56" y1="60" x2="72" y2="60" stroke="#2C5F8A" stroke-width="1.5" opacity="0.6"/>
  
  <!-- Microphone stand -->
  <rect x="60" y="72" width="8" height="24" fill="url(#standGradient)" filter="url(#shadow)"/>
  
  <!-- Base -->
  <ellipse cx="64" cy="104" rx="24" ry="6" fill="url(#standGradient)" filter="url(#shadow)"/>
  
  <!-- Sound waves - outer -->
  <path d="M 16 48 Q 16 32 32 32" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.6"/>
  <path d="M 96 32 Q 112 32 112 48" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.6"/>
  <path d="M 16 64 Q 16 80 32 80" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.6"/>
  <path d="M 96 80 Q 112 80 112 64" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.6"/>
  
  <!-- Sound waves - middle -->
  <path d="M 24 44 Q 24 36 32 36" stroke="#4A90E2" stroke-width="3" fill="none" opacity="0.5"/>
  <path d="M 96 36 Q 104 36 104 44" stroke="#4A90E2" stroke-width="3" fill="none" opacity="0.5"/>
  <path d="M 24 68 Q 24 76 32 76" stroke="#4A90E2" stroke-width="3" fill="none" opacity="0.5"/>
  <path d="M 96 76 Q 104 76 104 68" stroke="#4A90E2" stroke-width="3" fill="none" opacity="0.5"/>
  
  <!-- Sound waves - inner -->
  <path d="M 32 48 Q 32 40 40 40" stroke="#4A90E2" stroke-width="2" fill="none" opacity="0.4"/>
  <path d="M 88 40 Q 96 40 96 48" stroke="#4A90E2" stroke-width="2" fill="none" opacity="0.4"/>
  <path d="M 32 64 Q 32 72 40 72" stroke="#4A90E2" stroke-width="2" fill="none" opacity="0.4"/>
  <path d="M 88 72 Q 96 72 96 64" stroke="#4A90E2" stroke-width="2" fill="none" opacity="0.4"/>
</svg>