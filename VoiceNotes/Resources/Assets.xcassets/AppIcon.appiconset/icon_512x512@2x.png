  <path d="M 704 320 Q 768 320 768 384" stroke="#4A90E2" stroke-width="6" fill="none" opacity="0.6"/>
  <path d="M 256 512 Q 256 576 320 576" stroke="#4A90E2" stroke-width="6" fill="none" opacity="0.6"/>
  <path d="M 704 576 Q 768 576 768 512" stroke="#4A90E2" stroke-width="6" fill="none" opacity="0.6"/>
  
  <!-- Sound waves - inner ring -->
  <path d="M 320 384 Q 320 352 352 352" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.5"/>
  <path d="M 672 352 Q 704 352 704 384" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.5"/>
