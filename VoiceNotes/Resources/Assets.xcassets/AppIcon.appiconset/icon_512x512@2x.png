  <circle cx="496" cy="376" r="3" fill="#FFFFFF" opacity="0.5"/>
  <circle cx="528" cy="376" r="3" fill="#FFFFFF" opacity="0.5"/>
  <circle cx="496" cy="424" r="3" fill="#FFFFFF" opacity="0.5"/>
  <circle cx="528" cy="424" r="3" fill="#FFFFFF" opacity="0.5"/>
  
  <!-- Subtle texture lines on microphone body -->
  <g opacity="0.4">
    <line x1="400" y1="160" x2="400" y2="560" stroke="#FFFFFF" stroke-width="2"/>
    <line x1="624" y1="160" x2="624" y2="560" stroke="#000000" stroke-width="2"/>
    <line x1="416" y1="144" x2="416" y2="576" stroke="#FFFFFF" stroke-width="1"/>
    <line x1="608" y1="144" x2="608" y2="576" stroke="#000000" stroke-width="1"/>
  </g>
  
  <!-- Brand/logo area -->
  <rect x="480" y="520" width="64" height="8" rx="4" ry="4" fill="#2C5F8A" opacity="0.6"/>
</svg>