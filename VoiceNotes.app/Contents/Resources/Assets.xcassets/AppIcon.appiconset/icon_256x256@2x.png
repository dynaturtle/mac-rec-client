<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="micGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4A90E2;stop-opacity:1" />
      <stop offset="20%" style="stop-color:#5BA0F2;stop-opacity:1" />
      <stop offset="40%" style="stop-color:#4A90E2;stop-opacity:1" />
      <stop offset="60%" style="stop-color:#5BA0F2;stop-opacity:1" />
      <stop offset="80%" style="stop-color:#4A90E2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#357ABD;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="standGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#AAAAAA;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#888888;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#666666;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#444444;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="highlight" cx="25%" cy="25%" r="75%">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:0.4" />
      <stop offset="50%" style="stop-color:#FFFFFF;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#FFFFFF;stop-opacity:0" />
    </radialGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="4" dy="8" stdDeviation="8" flood-color="#000000" flood-opacity="0.5"/>
    </filter>
    <filter id="innerShadow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="3"/>
      <feOffset dx="2" dy="2" result="offset"/>
    </filter>
  </defs>
  
  <!-- Microphone body -->
  <rect x="192" y="64" width="128" height="224" rx="64" ry="64" fill="url(#micGradient)" stroke="#2C5F8A" stroke-width="6" filter="url(#shadow)"/>
  
  <!-- Highlight overlay -->
  <rect x="192" y="64" width="128" height="224" rx="64" ry="64" fill="url(#highlight)"/>
  
  <!-- Microphone grille outer -->
  <rect x="208" y="96" width="96" height="160" rx="48" ry="48" fill="none" stroke="#2C5F8A" stroke-width="4" opacity="0.6"/>
  
  <!-- Inner grille -->
  <rect x="216" y="104" width="80" height="144" rx="40" ry="40" fill="none" stroke="#2C5F8A" stroke-width="2" opacity="0.4"/>
  
  <!-- Grille lines -->
  <g opacity="0.8">
    <line x1="224" y1="112" x2="288" y2="112" stroke="#2C5F8A" stroke-width="3"/>
    <line x1="224" y1="128" x2="288" y2="128" stroke="#2C5F8A" stroke-width="3"/>
    <line x1="224" y1="144" x2="288" y2="144" stroke="#2C5F8A" stroke-width="3"/>
    <line x1="224" y1="160" x2="288" y2="160" stroke="#2C5F8A" stroke-width="3"/>
    <line x1="224" y1="176" x2="288" y2="176" stroke="#2C5F8A" stroke-width="3"/>
    <line x1="224" y1="192" x2="288" y2="192" stroke="#2C5F8A" stroke-width="3"/>
    <line x1="224" y1="208" x2="288" y2="208" stroke="#2C5F8A" stroke-width="3"/>
    <line x1="224" y1="224" x2="288" y2="224" stroke="#2C5F8A" stroke-width="3"/>
    <line x1="224" y1="240" x2="288" y2="240" stroke="#2C5F8A" stroke-width="3"/>
  </g>
  
  <!-- Microphone stand -->
  <rect x="240" y="288" width="32" height="96" fill="url(#standGradient)" filter="url(#shadow)"/>
  
  <!-- Stand connector -->
  <rect x="248" y="280" width="16" height="16" rx="8" ry="8" fill="url(#standGradient)"/>
  
  <!-- Base -->
  <ellipse cx="256" cy="416" rx="96" ry="24" fill="url(#standGradient)" filter="url(#shadow)"/>
  
  <!-- Sound waves - outermost ring -->
  <path d="M 64 192 Q 64 128 128 128" stroke="#4A90E2" stroke-width="8" fill="none" opacity="0.7"/>
  <path d="M 384 128 Q 448 128 448 192" stroke="#4A90E2" stroke-width="8" fill="none" opacity="0.7"/>
  <path d="M 64 256 Q 64 320 128 320" stroke="#4A90E2" stroke-width="8" fill="none" opacity="0.7"/>
  <path d="M 384 320 Q 448 320 448 256" stroke="#4A90E2" stroke-width="8" fill="none" opacity="0.7"/>
  
  <!-- Sound waves - outer ring -->
  <path d="M 96 176 Q 96 144 128 144" stroke="#4A90E2" stroke-width="6" fill="none" opacity="0.6"/>
  <path d="M 384 144 Q 416 144 416 176" stroke="#4A90E2" stroke-width="6" fill="none" opacity="0.6"/>
  <path d="M 96 272 Q 96 304 128 304" stroke="#4A90E2" stroke-width="6" fill="none" opacity="0.6"/>
  <path d="M 384 304 Q 416 304 416 272" stroke="#4A90E2" stroke-width="6" fill="none" opacity="0.6"/>
  
  <!-- Sound waves - middle ring -->
  <path d="M 128 192 Q 128 160 160 160" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.5"/>
  <path d="M 352 160 Q 384 160 384 192" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.5"/>
  <path d="M 128 256 Q 128 288 160 288" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.5"/>
  <path d="M 352 288 Q 384 288 384 256" stroke="#4A90E2" stroke-width="4" fill="none" opacity="0.5"/>
  
  <!-- Additional decorative elements -->
  <circle cx="256" cy="176" r="4" fill="#FFFFFF" opacity="0.9"/>
  <circle cx="256" cy="224" r="3" fill="#FFFFFF" opacity="0.7"/>
  <circle cx="240" cy="200" r="2" fill="#FFFFFF" opacity="0.5"/>
  <circle cx="272" cy="200" r="2" fill="#FFFFFF" opacity="0.5"/>
  
  <!-- Subtle texture lines on microphone body -->
  <g opacity="0.3">
    <line x1="200" y1="80" x2="200" y2="280" stroke="#FFFFFF" stroke-width="1"/>
    <line x1="312" y1="80" x2="312" y2="280" stroke="#000000" stroke-width="1"/>
  </g>
</svg>